    <!-- Counter up -->
    <script src="~/MedicalDoctor/js/jquery.waypoints.min.js"></script>
    <script src="~/MedicalDoctor/js/jquery.countup.min.js"></script>

    <!-- isotope filter card -->
    <script src="~/MedicalDoctor/js/isotope.pkgd.min.js"></script>

    <!-- customer js -->
