@model BulkyBook.Models.ViewModels.HealthcareListVM
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Doctor's Listings</title>
    <link rel="icon" href="~/MedicalDoctor/images/icon.png">

    <!-- wow animation style -->
