@model BulkyBook.Models.Category


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Category";
}



<form method="post" enctype="multipart/form-data">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.CategoryId != 0)
        {
            title = "Edit Category";
        }

        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CategoryName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CategoryName" class="form-control" /><br />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="CategoryIcon"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CategoryIcon" style="display:none" />
                    <input asp-for="formFile1" class="custom-control-label" accept="image/*" type="file" /><br />
                    @*<input asp-for="formFile1" accept="image/*" type="file" />*@
                    <span asp-validation-for="formFile1" class="text-danger"></span><br />
                </div><br />
                <div class="col-4">
                    <label asp-for="CategoryImage"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CategoryImage" style="display:none" />
                    <input asp-for="formFile" class="custom-control-label" accept="image/*" type="file" /><br />
                    @*<input asp-for="formFile" accept="image/*" type="file" />*@
                    <span asp-validation-for="formFile" class="text-danger"></span>
                </div><br />
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">

                    @if (Model.CategoryId != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="Model.CategoryId" />
                    }
                    else
                    {

                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
                @if (Model.CategoryId != 0)
                {

                    <div class="col-3 offset-1 pt-4">
                        <img src="@Model.CategoryIcon" width="50%" style="border-radius:5px; border:1px solid #bbb9b9" />
                    </div>
                }
                @if (Model.CategoryId != 0)
                {

                    <div class="col-3 offset-1 pt-4">
                        <img src="@Model.CategoryImage" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
                    </div>
                }
            </div>
        </div>
        @*@if (Model.CategoryId != null)
            {

                <div class="col-3 offset-1 pt-4">
                    <img src="@Model.CategoryIcon" width="50%" style="border-radius:5px; border:1px solid #bbb9b9" />
                </div>
            }
            @if (Model.CategoryId != null)
            {

                <div class="col-3 offset-1 pt-4">
                    <img src="@Model.CategoryImage" width="50%" style="border-radius:5px; border:1px solid #bbb9b9" />
                </div>
            }*@

    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.tiny.cloud/1/n94ifuzvl80pchikopiwgz2esrw8n28dwcywvpejlqrregfp/tinymce/5/tinymce.min.js"></script>


}
